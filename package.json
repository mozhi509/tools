{
  "name": "web-toolkit",
  "version": "1.0.0",
  "description": "一个功能强大的Web工具集，包含JSON格式化等实用工具",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server": "node dist/index.js",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "server:build": "tsc",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "build": "npm run server:build && npm run client:build",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest server/tests --config jest.config.js",
    "test:client": "cd client && npm test",
    "test:server": "jest server/tests --config jest.config.js"
  },
  "keywords": [
    "web-tools",
    "json",
    "formatter",
    "utilities"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "multer": "^2.0.2",
    "redis": "^5.10.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5"
  }
}
