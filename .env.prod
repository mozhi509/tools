# 生产环境配置
NODE_ENV=production
PORT=3001

# Redis 生产配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=REDIS_PASSWORD_PLACEHOLDER
REDIS_DB=0

# 性能配置
MAX_MEMORY_RESTART=1G
NODE_MAX_OLD_SPACE_SIZE=1024

# 安全配置
JWT_SECRET=JWT_SECRET_PLACEHOLDER
SESSION_SECRET=SESSION_SECRET_PLACEHOLDER

# 文件上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=json,jpg,jpeg,png,gif,mp4,avi,mov

# 日志配置
LOG_LEVEL=warn
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# 应用配置
DOMAIN=zhimingli.com
HTTPS_ENABLED=false
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/etc/ssl/certs/yourcert.pem
# SSL_KEY_PATH=/etc/ssl/private/yourkey.pem