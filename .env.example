# 应用配置
NODE_ENV=production
PORT=3001

# Redis 配置 (生产环境请设置强密码)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# 数据库配置 (如果需要)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=webtoolkit
# DB_USER=username
# DB_PASSWORD=password

# 安全配置
# JWT_SECRET=your-jwt-secret-key
# SESSION_SECRET=your-session-secret-key

# 文件上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=json,jpg,jpeg,png,gif,mp4,avi,mov

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 性能配置
MAX_MEMORY_RESTART=1G
NODE_MAX_OLD_SPACE_SIZE=1024

# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true