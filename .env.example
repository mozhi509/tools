# 环境配置示例文件
# 复制此文件为 .env 并填入实际值

# 应用配置
NODE_ENV=development
PORT=3001

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# 安全配置
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters

# 文件上传配置
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=json,jpg,jpeg,png,gif,mp4,avi,mov

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# 生产环境配置
DOMAIN=your_domain.com
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your_cert.pem
SSL_KEY_PATH=/etc/ssl/private/your_key.pem